<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" default-locale="id" demote-non-dropping-particle="sort-only">
  <info>
    <title>Harvard Bahasa Indonesia</title>
    <id>http://www.zotero.org/styles/harvard-bahasa-indonesia</id>
    <link href="http://www.zotero.org/styles/harvard-cite-them-right" rel="template"/>
    <author>
      <name>OpenAI (dimodifikasi untuk Bahasa Indonesia)</name>
    </author>
    <category citation-format="author-date"/>
    <summary>Gaya Harvard yang dimodifikasi untuk daftar pustaka dalam Bahasa Indonesia</summary>
    <updated>2025-08-03T00:00:00+07:00</updated>
  </info>

  <locale xml:lang="id">
    <terms>
      <term name="editor" form="short">
        <single>peny.</single>
        <multiple>para peny.</multiple>
      </term>
      <term name="editortranslator" form="verb">disunting dan diterjemahkan oleh</term>
      <term name="edition" form="short">ed.</term>
      <term name="available at">tersedia di</term>
      <term name="accessed">diakses</term>
      <term name="no date">tanpa tanggal</term>
      <term name="in">dalam</term>
      <term name="page" form="short">pp.</term>
      <term name="volume">vol.</term>
      <term name="and">dan</term> <!-- Ini yang penting untuk mengganti "and" menjadi "dan" -->
    </terms>
  </locale>

  <macro name="author">
    <names variable="author" and="text" delimiter=", " delimiter-precedes-last="always">
      <name initialize-with="." name-as-sort-order="all"/>
      <label form="short" prefix=" (" suffix=")"/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editor" and="text" delimiter=", ">
          <name initialize-with="."/>
        </names>
        <text macro="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="access">
    <choose>
      <if variable="URL">
        <group delimiter=". ">
          <group delimiter=" ">
            <text term="available at" text-case="capitalize-first"/>
            <text variable="URL" font-style="italic"/>
          </group>
          <group prefix="[" suffix="]">
            <text value="Tanggal Akses:"/>
            <date variable="accessed" delimiter=" ">
              <date-part name="day"/>
              <date-part name="month" form="long"/>
              <date-part name="year"/>
            </date>
          </group>
        </group>
      </if>
    </choose>
  </macro>

  <macro name="title">
    <choose>
      <if type="book thesis report" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else-if type="chapter paper-conference">
        <text variable="title" quotes="true"/>
      </else-if>
      <else>
        <text variable="title" quotes="true"/>
      </else>
    </choose>
  </macro>

  <macro name="container-title">
    <text variable="container-title" font-style="italic"/>
  </macro>

  <macro name="editor">
    <names variable="editor" and="text" delimiter=", ">
      <name initialize-with=". "/>
      <label form="short" prefix=" (" suffix=")"/>
    </names>
  </macro>

  <macro name="year-date">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="publisher">
    <group delimiter=". ">
      <text variable="publisher"/>
      <text variable="publisher-place"/>
    </group>
  </macro>

  <macro name="pages">
    <group>
      <text term="page" form="short" suffix=" "/>
      <text variable="page"/>
    </group>
  </macro>

  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal"/>
          <text term="edition" form="short"/>
        </group>
      </if>
      <else>
        <text variable="edition"/>
      </else>
    </choose>
  </macro>

  <citation et-al-min="4" et-al-use-first="1" collapse="year">
    <sort>
      <key macro="author"/>
      <key macro="year-date"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <text macro="author"/>
        <text macro="year-date"/>
      </group>
    </layout>
  </citation>

  <bibliography et-al-min="4" et-al-use-first="1" and="text">
    <sort>
      <key macro="author"/>
      <key macro="year-date"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <group delimiter=". ">
        <text macro="author"/>
        <text macro="year-date" prefix="" suffix=""/>
        <text macro="title"/>
        <text macro="edition"/>
        <text macro="editor"/>
        <text macro="container-title"/>
        <text macro="publisher"/>
        <text macro="pages"/>
        <text macro="access"/>
      </group>
    </layout>
  </bibliography>
</style>
